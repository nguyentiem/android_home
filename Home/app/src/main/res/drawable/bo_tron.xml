<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="@color/color_bo_tron" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1dp"
        android:color="@color/color_bo_tron" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="@dimen/padding_bo_tron"
        android:top="@dimen/padding_bo_tron"
        android:right="@dimen/padding_bo_tron"
        android:bottom="@dimen/padding_bo_tron" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="@dimen/radius_bo_tron" >
    </corners>

</shape>